# Hume AI credentials (REQUIRED)
HUME_API_KEY=YOUR_HUME_API_KEY
HUME_SECRET_KEY=YOUR_HUME_SECRET_KEY

# Server settings (override defaults; can also be set via CLI flags)
HUME_TTS_URI=tcp://0.0.0.0:10201
HUME_TTS_FORMAT=wav
HUME_TTS_INSTANT_MODE=true
HUME_TTS_SAMPLE_RATE=22050
HUME_TTS_SAMPLES_PER_CHUNK=512
HUME_TTS_LOG_FILE=/tmp/hume-tts.log
# Optional default voice id if an unknown voice is requested
# HUME_TTS_DEFAULT_VOICE_ID=eaa917f9-fb8e-4b44-9e8d-b3b78c9c1ebc

# Path inside the container to voices file (compose sets this to /app/voices.txt by default)
HUME_TTS_VOICES_FILE=/app/voices.txt

# Debug logging (1/true/yes/on to enable)
# HUME_TTS_DEBUG=1
